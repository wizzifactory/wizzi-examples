{
    "name": "mern-server-starter",
    "version": "0.0.1",
    "description": "MERN (MongoDB, Express, React, and Node.js) server starter template",
    "author": "Stefano Bassoli",
    "license": "MIT",
    "scripts": {
        "test": "npm run build && mocha --require @babel/register",
        "copy": "cpx src/**/*.ittf dist",
        "build": "babel src -d dist",
        "start": "npm run build && npm run copy && nodemon dist/index.js",
        "serve": "npm run build && npm run copy && node dist/index.js"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "connect-mongo": "^2.0.3",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "envalid": "^4.2.2",
        "express": "^4.16.4",
        "express-jwt": "^5.3.1",
        "express-session": "^1.15.6",
        "json-stringify-safe": "^5.0.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.3.11",
        "parseurl": "^1.3.2",
        "passport": "^0.4.0",
        "passport-github2": "^0.1.11",
        "passport-local": "^1.0.0",
        "socket.io": "^2.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/register": "^7.4.0",
        "babel-polyfill": "^6.26.0",
        "cpx": "^1.5.0",
        "nodemon": "^1.17.5"
    }
}
